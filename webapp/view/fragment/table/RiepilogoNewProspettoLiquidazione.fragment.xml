<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
  xmlns:l="sap.ui.layout"
>
  <Panel class="onlyTopPadding" visible="{StepScenario>/wizard1Step2}">
		<headerToolbar>
      <OverflowToolbar>
        <Title text="{i18n>titleRiepilogoNewProspettoLiquidazione}" />
      </OverflowToolbar>
    </headerToolbar>
    <content>
      <l:Grid defaultSpan="XL12 L12 M12 S12" >
        <Table
					items="{path: 'NewProspettoLiquidazione>/'}"
				>
          <columns>
            <Column minScreenWidth="Desktop" demandPopin="true">
              <header><Text text="{i18n>labelTipoDocumento}" /></header>
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
              <header><Text text="{i18n>labelDataDocumento}" /></header>
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
              <header><Text text="{i18n>labelDataCompetenza}" /></header>
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
              <header><Text text="{i18n>labelDenomBenLiquidazione}" /></header>
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
              <header><Text text="{i18n>titleModalitaPagamento}" /></header>
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
              <header><Text text="{i18n>labelIban}" /></header>
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
              <header><Text text="{i18n>labelDurc}" /></header>
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
              <header><Text text="{i18n>labelFermoAmministrativo}" /></header>
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
              <header><Text text="{i18n>labelImportoLiquidazione}" /></header>
            </Column>
          </columns>
          <items>
            <ColumnListItem vAlign="Middle">
              <cells>
                <Text text="{NewProspettoLiquidazione>TpDoc}"/>
                <Text text="{
                              path: 'NewProspettoLiquidazione>DataDoc',
                              type: 'sap.ui.model.type.Date',
                              formatOptions: {
                                pattern: 'dd.MM.yyyy'
                              }
                            }"/>
                <Text text="{
                              path: 'NewProspettoLiquidazione>DataComp',
                              type: 'sap.ui.model.type.Date',
                              formatOptions: {
                                pattern: 'dd.MM.yyyy'
                              }
                            }"/>				
                <Text text="{NewProspettoLiquidazione>ZzragSoc}"/>
                <Text text="{NewProspettoLiquidazione>Zdescwels}"/>
                <Text text="{NewProspettoLiquidazione>Iban}"/>
                <Text text="{NewProspettoLiquidazione>Zdurc}"/>
                <Text text="{NewProspettoLiquidazione>ZfermAmm}"/>
                <Text text="{
                        path: 'NewProspettoLiquidazione>Zimpliq',
                        formatter:'.formatter.convertFormattedNumber'
                }" />
              </cells>
            </ColumnListItem>
          </items>  
        </Table>
      </l:Grid>
    </content>
	</Panel>
</c:FragmentDefinition>