<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
  xmlns:l="sap.ui.layout"
>
  <Panel class="onlyTopPadding" visible="{StepScenario>/wizard1Step3}">
		<headerToolbar>
      <OverflowToolbar>
        <Title text="{i18n>titleRiepilogoListProspettoLiquidazione}" />
      </OverflowToolbar>
    </headerToolbar>
    <content>
      <l:Grid defaultSpan="XL12 L12 M12 S12" class="bgNotEditable" >
        <Table  
          items="{path: 'Soa>/data'}"
        >
        <columns>
          <Column minScreenWidth="Desktop" demandPopin="true" >
            <header><Text text="{i18n>labelProspetto}" /></header>
          </Column>
          <Column minScreenWidth="Desktop" demandPopin="true">
            <header><Text text="{i18n>labelRigaProspetto}" /></header>
          </Column>
          <Column minScreenWidth="Desktop" demandPopin="true">
            <header><Text text="{i18n>labelDescProspLiquidazione}" /></header>
          </Column>
          <Column minScreenWidth="Desktop" demandPopin="true">
            <header><Text text="{i18n>labelAbbrNRegDocumento}" /></header>
          </Column>
          <Column minScreenWidth="Desktop" demandPopin="true">
            <header><Text text="{i18n>labelImpDaOrdinare}" /></header>
          </Column>
        </columns>
        <items>
        <ColumnListItem vAlign="Middle" class="bgNotEditable">
          <cells>
            <Text text="{Soa>Znumliq}"/>
            <Text text="{Soa>Zposizione}"/>
            <Text text="{Soa>ZdescProsp}"/>				
            <Text text="{Soa>Belnr}"/>
            <Text text="{path: 'Soa>Zimpdaord', formatter:'.formatter.convertFormattedNumber'}" /> 
          </cells>
        </ColumnListItem>
      </items>  
        </Table>
        <Panel id="pnlCalculatorRiepilogo" backgroundDesign="Transparent">
          <l:Grid defaultSpan="XL12 L12 M12 S12" class="bgNotEditable calculator" >
            <Text text="{i18n>labelCalculator}">
              <layoutData ><l:GridData span="XL2 L3 M4 S12" indent="XL8 L5" /></layoutData>
            </Text>
            <Input 
              value="{
                      path: 'Soa>/Zimptot',
                      formatter:'.formatter.convertFormattedNumber'
                    }"
              editable="false"
            >
              <layoutData><l:GridData span="XL1 L2 M4 S12" /></layoutData>
            </Input>
          </l:Grid>
        </Panel>
      </l:Grid>
    </content>
	</Panel>
</c:FragmentDefinition>