<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
  <Panel backgroundDesign="Transparent">
		<headerToolbar>
      <OverflowToolbar>
        <Title text="{i18n>searchRitenuta}" />
      </OverflowToolbar>
    </headerToolbar>

		<content>
			<l:Grid defaultSpan="XL12 L12 M12 S12" hSpacing="0.5">
				<Text text="{i18n>soaFilterWitht}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
				<Input
					id="fltRitenuta"
					valueHelpRequest="onValueHelpRitenuta"
					showValueHelp="true"
					valueHelpOnly="true"
					app:dialogName="sdRitenuta"
					app:fragmentName="Ritenuta"
					app:searchPropertyModel="CodRitenuta"
				>
					<layoutData><l:GridData span="XL2 L2 M5 S12" /></layoutData>
				</Input>	
				<Text text="{i18n>soaFilterZzCebenra}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
				<Input
					id="fltEnteBeneficiario"
					valueHelpRequest="onValueHelpEnteBeneficiario"
					showValueHelp="true"
					valueHelpOnly="true"
					app:dialogName="sdEnteBeneficiario"
					app:fragmentName="EnteBeneficiario"
					app:searchPropertyModel="ZzCebenra"
				>
					<layoutData><l:GridData span="XL2 L2 M5 S12" /></layoutData>
				</Input>
			</l:Grid>
		</content>
		
		<content>
			<l:Grid defaultSpan="XL12 L12 M12 S12" hSpacing="0.5">
					<Text text="{i18n>soaFilterQuoteEsigibili}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
						<layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
					</Text>
					<CheckBox id="fltQuoteEsigibili" selected="true" select="onQuoteEsibilitaChange">
						<layoutData><l:GridData span="XL1 L1 M1 S1"/></layoutData>
					</CheckBox>
				</l:Grid>
		</content>

		<content>
			<l:Grid defaultSpan="XL12 L12 M12 S12" hSpacing="0.5">
				<Text text="{i18n>soaFilterDataEseFrom}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
				<DatePicker
					id="fltDataEseFrom"								
					valueFormat="yyyy-MM-dd"
					displayFormat="dd/MM/yyyy"
					change="onDataEseChange"
				>
					<layoutData><l:GridData span="XL2 L2 M5 S12" /></layoutData>
				</DatePicker>
				<Text text="{i18n>soaFilterDataEseTo}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12" /></layoutData>
        </Text>
				<DatePicker
					id="fltDataEseTo"								
					valueFormat="yyyy-MM-dd"
					displayFormat="dd/MM/yyyy"
					change="onDataEseChange"	
				>
					<layoutData><l:GridData span="XL2 L2 M5 S12" /></layoutData>
				</DatePicker>
			</l:Grid>
		</content>

	</Panel>
</c:FragmentDefinition>