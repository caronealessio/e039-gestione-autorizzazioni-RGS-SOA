<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
  xmlns:l="sap.ui.layout"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
  <Panel backgroundDesign="Transparent">
		<headerToolbar>
      <OverflowToolbar>
        <Title text="{i18n>searchBeneficiario}" />
      </OverflowToolbar>
    </headerToolbar>

    <content>
			<l:Grid defaultSpan="XL12 L12 M12 S12" hSpacing="0.5">
				<Text text="{i18n>soaFilterTipoBen}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
				<ComboBox
					id="fltTipoBeneficiario" 
					width="100%"
					items="{path: '/TipologiaBeneficiarioSet'}"
					selectedKey="{Beneficiario>/TypeBen}"
					change="onTipoBeneficiarioChange"
					app:searchPropertyModel="TipoBeneficiario"
				>
					<c:Item key="{CodTipoBen}" text="{DescTipoBen}" />
					<layoutData><l:GridData span="XL2 L2 M5 S12" /></layoutData>
				</ComboBox>
				<Text text="{i18n>filterBeneficiario}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
				<!-- TODO - Eliminare value -->
				<Input
					id="fltBeneficiario"
					valueHelpRequest="onValueHelpBeneficiario"
					showValueHelp="true"
					valueHelpOnly="true"
					app:dialogName="sdBeneficiario"
					app:fragmentName="Beneficiario"
					app:searchPropertyModel="Lifnr"
				>
					<layoutData><l:GridData span="XL2 L2 M5 S12" /></layoutData>
				</Input>
			</l:Grid>
		</content>
		
		<content>
			<l:Grid defaultSpan="XL12 L12 M12 S12" hSpacing="0.5">
					<Text text="{i18n>soaFilterName}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
						<layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
					</Text>
          <Input value="{Beneficiario>/Name}" editable="false">
            <layoutData><l:GridData span="XL2 L2 M5 S12" /></layoutData>
				  </Input >
          <Text text="{i18n>soaFilterSurname}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
						<layoutData><l:GridData span="XL2 L3 M5 S12" /></layoutData>
					</Text>
          <Input value="{Beneficiario>/Surname}" editable="false">
            <layoutData><l:GridData span="XL2 L2 M5 S12" /></layoutData>
				  </Input>
          <Text text="{i18n>soaFilterRagSociale}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
						<layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
					</Text>
          <Input value="{Beneficiario>/RagSociale}" editable="false">
            <layoutData><l:GridData span="XL2 L2 M5 S12" /></layoutData>
				  </Input>
				</l:Grid>
		</content>

		<content>
			<l:Grid defaultSpan="XL12 L12 M12 S12" hSpacing="0.5">
				<Text text="{i18n>soaFilterCF}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
				<Input value="{Beneficiario>/CodFiscale}" editable="false">
					<layoutData><l:GridData span="XL2 L2 M5 S12" /></layoutData>
				</Input>
				<Text text="{i18n>soaFilterCFEstero}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
				<Input value="{Beneficiario>/CodFiscaleEstero}" editable="false">
					<layoutData><l:GridData span="XL2 L2 M5 S12" /></layoutData>
				</Input>
        <Text text="{i18n>soaFilterPIVA}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
				<Input value="{Beneficiario>/PIva}" editable="false">
					<layoutData><l:GridData span="XL2 L2 M5 S12" /></layoutData>
				</Input>
			</l:Grid>
		</content>
	</Panel>
</c:FragmentDefinition>