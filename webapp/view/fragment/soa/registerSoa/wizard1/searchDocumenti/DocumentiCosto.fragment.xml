<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
  xmlns:l="sap.ui.layout"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
  <Panel backgroundDesign="Transparent">
		<headerToolbar>
      <OverflowToolbar>
        <Title text="{i18n>searchDocumentoCosto}" />
      </OverflowToolbar>
    </headerToolbar>

    <content>
			<l:Grid defaultSpan="XL12 L12 M12 S12" hSpacing="0.5">
				<Text text="{i18n>filterUffContabile}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>      
        <Input
          id="fltUfficioContabile"
					valueHelpRequest="onValueHelpUffContabile"
					showValueHelp="true"
					valueHelpOnly="true"
					app:dialogName="sdUfficioContabile"
					app:fragmentName="UfficioContabile"
          app:searchPropertyModel="UfficioContabile"
        >
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Input>
				<Text text="{i18n>filterUffPagatore}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
        <Input
          id="fltUfficioPagatore"
					valueHelpRequest="onValueHelpUffPagatore"
					showValueHelp="true"
					valueHelpOnly="true"
					app:dialogName="sdUfficioPagatore"
					app:fragmentName="UfficioPagatore"
          app:searchPropertyModel="UfficioPagatore"
        >
          <layoutData><l:GridData span="XL2 L3 M5 S12" /></layoutData>
        </Input>
			</l:Grid>
		</content>
    
    <content>
			<l:Grid defaultSpan="XL12 L12 M12 S12" hSpacing="0.5">
				<Text text="{i18n>filterAnnoRegDoc}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
        <MultiComboBox 
          id="fltAnnoRegDoc" 
          items="{path: '/RicercaAnnoRegDocSet'}" 
          selectionChange="onChangeAnnoRegDoc"
          app:searchPropertyModel="AnnoRegDocumento"
        >   
          <c:Item key="{Gjahr}" text="{Gjahr}"/>
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </MultiComboBox>
				<Text text="{i18n>filterNRegDocFrom}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
        <Input
          id="fltNRegDocFrom"
					valueHelpRequest="onValueHelpNRegDocumento"
					showValueHelp="true"
					valueHelpOnly="true"
          app:input="fltNRegDocFrom"
					app:dialogName="sdNRegDocumento"
					app:fragmentName="NRegDocumento"
          app:searchPropertyModel="NumRegDoc"
        >
          <layoutData><l:GridData span="XL2 L3 M5 S12" /></layoutData>
        </Input>
        <Text text="{i18n>filterNRegDocTo}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
        <Input
          id="fltNRegDocTo"
					valueHelpRequest="onValueHelpNRegDocumento"
					showValueHelp="true"
					valueHelpOnly="true"
          app:input="fltNRegDocTo"
					app:dialogName="sdNRegDocumento"
					app:fragmentName="NRegDocumento"
        >
          <layoutData><l:GridData span="XL2 L3 M5 S12" /></layoutData>
        </Input>
			</l:Grid>
		</content>
    
    <content>
			<l:Grid defaultSpan="XL12 L12 M12 S12" hSpacing="0.5">
				<Text text="{i18n>filterAnnoDocBene}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
        <MultiComboBox 
          id="fltAnnoDocBene" 
          items="{path: 'AnnoDocBeneficiario>/'}" 
          selectionChange="onChangeAnnoDocBene"
          app:searchPropertyModel="AnnoDocBeneficiario"
        >   
          <c:Item key="{AnnoDocBeneficiario>Gjahr}" text="{AnnoDocBeneficiario>Gjahr}"/>
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </MultiComboBox>
				<Text  text="{i18n>filterNDocBene}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
        <MultiInput
          id="fltNDocBene"
					valueHelpRequest="onValueHelpNumDocBene"
					showValueHelp="true"
					valueHelpOnly="true"
					app:dialogName="sdNDocBeneficiario"
					app:fragmentName="NDocBeneficiario"
          app:searchPropertyModel="NDocBen"
        >
          <layoutData><l:GridData span="XL2 L3 M5 S12" /></layoutData>
        </MultiInput>
			</l:Grid>
		</content>

    <content>
			<l:Grid defaultSpan="XL12 L12 M12 S12" hSpacing="0.5">
				<Text text="{i18n>filterCIG}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
        <Input id="fltCIG" app:searchPropertyModel="Cig">
          <layoutData><l:GridData span="XL2 L3 M5 S12" /></layoutData>
        </Input>
				<Text text="{i18n>filterCUP}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
        <Input id="fltCUP" app:searchPropertyModel="Cup">
          <layoutData><l:GridData span="XL2 L3 M5 S12" /></layoutData>
        </Input>
			</l:Grid>
		</content>

    <content>
			<l:Grid defaultSpan="XL12 L12 M12 S12" hSpacing="0.5">
				<Text text="{i18n>filterScadDocFrom}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
        <DatePicker
					id="fltScadenzaDocFrom"		
          app:searchPropertyModel="ScadenzaDoc"						
					valueFormat="yyyy-MM-dd"
					displayFormat="dd/MM/yyyy">
          <layoutData><l:GridData span="XL2 L3 M5 S12" /></layoutData>
        </DatePicker>	
				<Text text="{i18n>filterScadDocTo}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
          <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
        </Text>
        <DatePicker
					id="fltScadenzaDocTo"								
					valueFormat="yyyy-MM-dd"
					displayFormat="dd/MM/yyyy">
          <layoutData><l:GridData span="XL2 L3 M5 S12" /></layoutData>
        </DatePicker>	
			</l:Grid>
		</content>

		
	</Panel>
</c:FragmentDefinition>