<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
  xmlns:l="sap.ui.layout"
>
<Panel>
  <content>
    <l:Grid defaultSpan="XL12 L12 M12 S12" hSpacing="0.5" >
      <Text text="{i18n>inputNumeroProtocollo}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
					<layoutData ><l:GridData span="XL2 L3 M5 S12" /></layoutData>
      </Text>
      <Input>
        <layoutData><l:GridData span="XL1 L1 M2 S12"/></layoutData>
      </Input>
      <Text text="{i18n>inputDataProtocollo}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
					<layoutData><l:GridData span="XL2 L3 M5 S12" indent="XL4"/></layoutData>
      </Text>
      <Input>
        <layoutData><l:GridData span="XL1 L1 M2 S12"/></layoutData>
      </Input>
      
      <Text text="{i18n>inputLocalitaPagamento}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
					<layoutData><l:GridData span="XL2 L3 M5 S12" linebreak="true"/></layoutData>
      </Text>
      <Input>
        <layoutData><l:GridData span="XL2 L3 M5 S12"/></layoutData>
      </Input>

      <Text text="{i18n>inputCausalePagamento}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
					<layoutData><l:GridData span="XL2 L3 M5 S12" linebreak="true"/></layoutData>
      </Text>
      <Input>
        <layoutData><l:GridData span="XL8 L3 M5 S12"/></layoutData>
      </Input>

      <Text text="{i18n>inputE2EID}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
					<layoutData><l:GridData span="XL2 L3 M5 S12" linebreak="true"/></layoutData>
      </Text>
      <Input>
        <layoutData><l:GridData span="XL8 L3 M5 S12"/></layoutData>
      </Input>

      <Text text="{i18n>inputDataEsigibilita}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
					<layoutData><l:GridData span="XL2 L3 M5 S12" linebreak="true"/></layoutData>
      </Text>
      <Input>
        <layoutData><l:GridData span="XL1 L3 M5 S12"/></layoutData>
      </Input>
      <Text text="{i18n>inputZonaIntervento}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
					<layoutData><l:GridData span="XL2 L3 M5 S12" indent="XL4"/></layoutData>
      </Text>
      <Input>
        <layoutData><l:GridData span="XL1 L3 M5 S12"/></layoutData>
      </Input>

    </l:Grid>
  </content>
</Panel>
</c:FragmentDefinition>